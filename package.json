{
  "name": "welly-exchange",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "test:cov": "yarn test --coverage --watchAll=false",
    "lint": "eslint src --ext js,ts,tsx",
    "eject": "react-scripts eject",
    "coveralls": "cat ./coverage/lcov.info | coveralls"
  },
  "engines": {
    "node": ">=10",
    "npm": ">=6"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}",
      "!src/serviceWorker.js",
      "!src/store/index.ts",
      "!src/index.tsx"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "dependencies": {
    "axios": "^0.19.2",
    "nuka-carousel": "^4.6.1",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-redux": "^7.1.3",
    "react-scripts": "3.3.0",
    "redux": "^4.0.5",
    "redux-thunk": "^2.3.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.0.2",
    "@testing-library/react": "^9.4.0",
    "@types/jest": "^25.1.1",
    "@types/react-redux": "^7.1.7",
    "@types/redux-mock-store": "^1.0.2",
    "coveralls": "^3.0.9",
    "node-sass": "^4.13.1",
    "redux-mock-store": "^1.5.4",
    "typescript": "^3.7.5"
  }
}
